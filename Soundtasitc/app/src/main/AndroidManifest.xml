<?xml version="1.0" encoding="utf-8"?>
<manifest xmlns:android="http://schemas.android.com/apk/res/android"
    package="soundtastic.soundtasitc" >

    <uses-permission android:name="android.permission.RECORD_AUDIO" />
    <uses-permission android:name="android.permission.WRITE_EXTERNAL_STORAGE" />
    <uses-permission android:name="android.permission.READ_EXTERNAL_STORAGE" />

    <application
        android:allowBackup="true"
        android:icon="@mipmap/ic_launcher"
        android:label="@string/app_name"
        android:theme="@style/AppTheme" >
        <activity
            android:name=".MainActivity"
            android:configChanges="orientation|screenSize"
            android:label="@string/app_name" >
            <intent-filter>
                <action android:name="android.intent.action.MAIN" />

                <category android:name="android.intent.category.LAUNCHER" />
            </intent-filter>
        </activity>
        <activity
            android:name=".playmidi.PlayMIDIActivity"
            android:configChanges="orientation|screenSize"
            android:label="@string/title_activity_play_midi" >
        </activity>
        <activity
            android:name=".MixingInterface"
            android:configChanges="orientation|screenSize"
            android:label="MixingInterface" />
        <activity
            android:name=".Record"
            android:configChanges="orientation|screenSize"
            android:label="Record" />
        <activity
            android:name=".GridView"
            android:label="@string/title_activity_grid_view" >
        </activity>
    </application>

</manifest>
