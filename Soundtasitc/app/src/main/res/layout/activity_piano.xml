<LinearLayout
    android:id="@+id/container"
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    tools:context=".PianoActivity"
    tools:ignore="MergeRootFrame">

    <FrameLayout
        android:id="@+id/piano1"
        android:layout_width="match_parent"
        android:layout_height="0dp"
        android:layout_weight="1">

        <LinearLayout
            android:orientation="horizontal"
            android:layout_width="fill_parent"
            android:layout_height="fill_parent">

                <LinearLayout
                android:orientation="vertical"
                android:layout_width="fill_parent"
                android:layout_height="fill_parent"
                android:layout_weight="2"
                android:layout_gravity="left|top">


                    <LinearLayout
                        android:orientation="vertical"
                        android:layout_width="fill_parent"
                        android:layout_height="fill_parent">

                        <LinearLayout
                            android:orientation="horizontal"
                            android:layout_width="fill_parent"
                            android:layout_weight="3"
                            android:layout_height="fill_parent">

                            <Button
                                android:id="@+id/button1_A"
                                android:textAllCaps="false"
                                android:layout_width="0dp"
                                android:layout_height="match_parent"
                                android:layout_weight="0.5"
                                android:text="c#"
                                android:background="#ff000000"
                                android:textColor="#ffffffff"
                                android:layout_margin="2dp" />

                            <Button
                                android:id="@+id/button1_B"
                                android:textAllCaps="false"
                                android:layout_width="0dp"
                                android:layout_height="match_parent"
                                android:layout_weight="1"
                                android:text="c#"
                                android:background="#ff000000"
                                android:textColor="#ffffffff"
                                android:layout_margin="2dp" />

                            <Button
                                android:id="@+id/button1_C"
                                android:textAllCaps="false"
                                android:layout_width="0dp"
                                android:layout_height="match_parent"
                                android:layout_weight="1"
                                android:text="d#"
                                android:background="#ff000000"
                                android:textColor="#ffffffff"
                                android:layout_margin="2dp" />

                            <Button
                                android:id="@+id/button1_D"
                                android:textAllCaps="false"
                                android:layout_width="0dp"
                                android:layout_height="match_parent"
                                android:layout_weight="1"
                                android:text="1"
                                android:background="#ff000000"
                                android:textColor="#ffffffff"
                                android:layout_margin="2dp" />

                            <Button
                                android:id="@+id/button1_E"
                                android:textAllCaps="false"
                                android:layout_width="0dp"
                                android:layout_height="match_parent"
                                android:layout_weight="1"
                                android:text="f#"
                                android:background="#ff000000"
                                android:textColor="#ffffffff"
                                android:layout_margin="2dp" />

                            <Button
                                android:id="@+id/button1_F"
                                android:textAllCaps="false"
                                android:layout_width="0dp"
                                android:layout_height="match_parent"
                                android:layout_weight="1"
                                android:text="g#"
                                android:background="#ff000000"
                                android:textColor="#ffffffff"
                                android:layout_margin="2dp" />

                            <Button
                                android:id="@+id/button1_G"
                                android:textAllCaps="false"
                                android:layout_width="0dp"
                                android:layout_height="match_parent"
                                android:layout_weight="1"
                                android:text="a#"
                                android:background="#ff000000"
                                android:textColor="#ffffffff"
                                android:layout_margin="2dp" />

                            <Button
                                android:id="@+id/button1_H"
                                android:textAllCaps="false"
                                android:layout_width="0dp"
                                android:layout_height="match_parent"
                                android:layout_weight="0.5"
                                android:text="h#"
                                android:background="#ff000000"
                                android:textColor="#ffffffff"
                                android:layout_margin="2dp" />

                        </LinearLayout>

                        <LinearLayout
                        android:orientation="horizontal"
                        android:layout_width="fill_parent"
                        android:layout_weight="2"
                        android:layout_height="fill_parent">

                        <Button
                            android:id="@+id/button1_1"
                            android:textAllCaps="false"
                            android:layout_width="0dp"
                            android:layout_height="match_parent"
                            android:layout_weight="1"
                            android:text="c"
                            android:background="#ffffffff"
                            android:layout_margin="2dp" />

                        <Button
                            android:id="@+id/button1_2"
                            android:textAllCaps="false"
                            android:layout_width="0dp"
                            android:layout_height="match_parent"
                            android:layout_weight="1"
                            android:text="d"
                            android:background="#ffffffff"
                            android:layout_margin="2dp" />

                        <Button
                            android:id="@+id/button1_3"
                            android:textAllCaps="false"
                            android:layout_width="0dp"
                            android:layout_height="match_parent"
                            android:layout_weight="1"
                            android:text="e"
                            android:background="#ffffffff"
                            android:layout_margin="2dp" />
                        <Button
                            android:id="@+id/button1_4"
                            android:textAllCaps="false"
                            android:layout_width="0dp"
                            android:layout_height="match_parent"
                            android:layout_weight="1"
                            android:text="f"
                            android:background="#ffffffff"
                            android:layout_margin="2dp" />

                        <Button
                            android:id="@+id/button1_5"
                            android:textAllCaps="false"
                            android:layout_width="0dp"
                            android:layout_height="match_parent"
                            android:layout_weight="1"
                            android:text="g"
                            android:background="#ffffffff"
                            android:layout_margin="2dp" />

                        <Button
                            android:id="@+id/button1_6"
                            android:textAllCaps="false"
                            android:layout_width="0dp"
                            android:layout_height="match_parent"
                            android:layout_weight="1"
                            android:text="a"
                            android:background="#ffffffff"
                            android:layout_margin="2dp" />
                        <Button
                            android:id="@+id/button1_7"
                            android:textAllCaps="false"
                            android:layout_width="0dp"
                            android:layout_height="match_parent"
                            android:layout_weight="1"
                            android:text="h"
                            android:background="#ffffffff"
                            android:layout_margin="2dp" />

                    </LinearLayout>

                        <SeekBar
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:id="@+id/seekBar1"
                            android:max="28"
                            android:progress="15"/>
                    </LinearLayout>

                </LinearLayout>

            <LinearLayout
                android:orientation="vertical"
                android:layout_width="fill_parent"
                android:layout_weight="8"
                android:layout_height="fill_parent">

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:textAppearance="?android:attr/textAppearanceLarge"
                    android:text="BPM:"
                    android:id="@+id/textView" />

            </LinearLayout>

        </LinearLayout>

    </FrameLayout >

    <FrameLayout
        android:id="@+id/piano2"
        android:layout_width="match_parent"
        android:layout_height="0dp"
        android:layout_weight="1" >

        <LinearLayout
            android:orientation="horizontal"
            android:layout_width="fill_parent"
            android:layout_height="fill_parent">

            <LinearLayout
                android:orientation="vertical"
                android:layout_width="fill_parent"
                android:layout_height="fill_parent"
                android:layout_weight="2"
                android:layout_gravity="left|top">


                <LinearLayout
                    android:orientation="horizontal"
                    android:layout_width="fill_parent"
                    android:layout_weight="3"
                    android:layout_height="fill_parent">

                    <Button
                        android:id="@+id/button2_1"
                        android:layout_width="0dp"
                        android:layout_height="match_parent"
                        android:layout_weight="0.5"
                        android:text="1"
                        android:visibility="invisible" />

                    <Button
                        android:layout_width="0dp"
                        android:layout_height="match_parent"
                        android:layout_weight="1"
                        android:text="c#"
                        android:background="#ff000000"
                        android:textColor="#ffffffff"
                        android:layout_margin="2dp" />

                    <Button
                        android:layout_width="0dp"
                        android:layout_height="match_parent"
                        android:layout_weight="1"
                        android:text="d#"
                        android:background="#ff000000"
                        android:textColor="#ffffffff"
                        android:layout_margin="2dp" />

                    <Button
                        android:layout_width="0dp"
                        android:layout_height="match_parent"
                        android:layout_weight="1"
                        android:text="1"
                        android:background="#ff000000"
                        android:textColor="#ffffffff"
                        android:visibility="invisible" />

                    <Button
                        android:layout_width="0dp"
                        android:layout_height="match_parent"
                        android:layout_weight="1"
                        android:text="f#"
                        android:background="#ff000000"
                        android:textColor="#ffffffff"
                        android:layout_margin="2dp" />

                    <Button
                        android:layout_width="0dp"
                        android:layout_height="match_parent"
                        android:layout_weight="1"
                        android:text="g#"
                        android:background="#ff000000"
                        android:textColor="#ffffffff"
                        android:layout_margin="2dp" />

                    <Button
                        android:layout_width="0dp"
                        android:layout_height="match_parent"
                        android:layout_weight="1"
                        android:text="a#"
                        android:background="#ff000000"
                        android:textColor="#ffffffff"
                        android:layout_margin="2dp" />

                    <Button
                        android:layout_width="0dp"
                        android:layout_height="match_parent"
                        android:layout_weight="0.5"
                        android:text="1"
                        android:background="#ff000000"
                        android:textColor="#ffffffff"
                        android:visibility="invisible" />

                </LinearLayout>

                <LinearLayout
                    android:orientation="horizontal"
                    android:layout_width="fill_parent"
                    android:layout_weight="2"
                    android:layout_height="fill_parent">

                    <Button
                        android:layout_width="0dp"
                        android:layout_height="match_parent"
                        android:layout_weight="1"
                        android:text="c"
                        android:background="#ffffffff"
                        android:layout_margin="2dp" />

                    <Button
                        android:layout_width="0dp"
                        android:layout_height="match_parent"
                        android:layout_weight="1"
                        android:text="d"
                        android:background="#ffffffff"
                        android:layout_margin="2dp" />

                    <Button
                        android:layout_width="0dp"
                        android:layout_height="match_parent"
                        android:layout_weight="1"
                        android:text="e"
                        android:background="#ffffffff"
                        android:layout_margin="2dp" />
                    <Button
                        android:layout_width="0dp"
                        android:layout_height="match_parent"
                        android:layout_weight="1"
                        android:text="f"
                        android:background="#ffffffff"
                        android:layout_margin="2dp" />

                    <Button
                        android:layout_width="0dp"
                        android:layout_height="match_parent"
                        android:layout_weight="1"
                        android:text="g"
                        android:background="#ffffffff"
                        android:layout_margin="2dp" />

                    <Button
                        android:layout_width="0dp"
                        android:layout_height="match_parent"
                        android:layout_weight="1"
                        android:text="a"
                        android:background="#ffffffff"
                        android:layout_margin="2dp" />
                    <Button
                        android:layout_width="0dp"
                        android:layout_height="match_parent"
                        android:layout_weight="1"
                        android:text="h"
                        android:background="#ffffffff"
                        android:layout_margin="2dp" />

                </LinearLayout>

            </LinearLayout>

            <LinearLayout
                android:orientation="vertical"
                android:layout_width="fill_parent"
                android:layout_weight="8"
                android:layout_height="fill_parent"
                android:weightSum="1">

            </LinearLayout>
        </LinearLayout>
    </FrameLayout >

</LinearLayout >
