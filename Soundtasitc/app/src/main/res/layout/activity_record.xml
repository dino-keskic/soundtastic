<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools" android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".MainActivity"
    android:id="@+id/activity_main">


    <RelativeLayout
        android:layout_margin="0dp"
        android:layout_width="match_parent"
        android:layout_height="50dp"
        android:background="#000000"
        android:id="@+id/linearLayout">

        <ImageView
            android:layout_width="@dimen/sountastic_logo"
            android:layout_height="match_parent"
            android:src="@drawable/logo"
            android:id="@+id/recint_logo" />

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="@string/recint_header"
            android:textColor="@color/white"
            android:textSize="@dimen/recordinterface_title"
            android:layout_centerVertical="true"
            android:layout_toRightOf="@+id/recint_logo"
            android:layout_toEndOf="@+id/recint_logo" />

        <LinearLayout
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_gravity="center_vertical"
            android:layout_centerInParent="true">

        <ImageButton
            android:id="@+id/buttonPlay"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:src="@drawable/btn_global_play"
            android:background="@null"
            android:gravity="left"
            android:text="Play" />

        <ImageButton
            android:id="@+id/buttonStop"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:src="@drawable/btn_global_stop"
            android:visibility="gone"
            android:background="@null"
            android:gravity="left"/>

        <ImageButton
            android:id="@+id/buttonRecord"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:src="@drawable/btn_record"
            android:background="@null"
            android:gravity="left"
            android:text="Record" />
        </LinearLayout>


        <LinearLayout
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignParentRight="true"
            android:layout_centerInParent="true"
            >
        <ImageButton
            android:id="@+id/buttonSave"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:src="@drawable/btn_save"
            android:background="@null"
            android:gravity="right"

            android:text="Save" />

        <ImageButton
            android:id="@+id/buttonDiscard"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:src="@drawable/btn_trash"
            android:background="@null"
            android:gravity="right"

            android:text="Discard" />
        </LinearLayout>

    </RelativeLayout>

    <ImageView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:src="@drawable/micro"
        android:id="@+id/micro"
        android:layout_centerVertical="true"
        android:layout_centerHorizontal="true" />


</RelativeLayout>
