<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools" android:layout_width="match_parent"
    android:layout_height="match_parent" android:paddingLeft="@dimen/activity_horizontal_margin"
    android:paddingRight="@dimen/activity_horizontal_margin"
    android:paddingTop="@dimen/activity_vertical_margin"
    android:paddingBottom="@dimen/activity_vertical_margin" tools:context=".MainActivity"
    android:id="@+id/mixing_interface">

    <ImageView
        android:layout_width="wrap_content"
        android:layout_height="@android:dimen/notification_large_icon_height"
        android:id="@+id/logo"
        android:padding="5dp"
        android:src="@drawable/logo" />

    <Button
        android:layout_width="60dp"
        android:layout_height="wrap_content"
        android:text="Rec"
        android:id="@+id/mi_add_rec1"
        android:textSize="10dp"
        android:layout_below="@+id/logo" />

    <Button
        android:layout_width="60dp"
        android:layout_height="wrap_content"
        android:text="Piano"
        android:id="@+id/mi_add_piano1"
        android:textSize="10dp"
        android:layout_toRightOf="@+id/mi_add_rec1"
        android:layout_below="@+id/logo"
        />

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:id="@+id/mi_track_title1"
        android:text="Tracktitle"
        android:layout_toRightOf="@+id/mi_add_piano1"
        android:layout_centerVertical="true"
        android:layout_below="@+id/logo" />

    <Spinner
        android:id="@+id/mi_instrument1"
        android:layout_width="150dp"
        android:layout_height="wrap_content"
        android:background="@android:drawable/btn_dropdown"
        android:spinnerMode="dropdown"
        android:layout_below="@+id/logo"
        android:layout_alignParentRight="true"
        android:layout_alignParentEnd="true" />

    <Button
        android:layout_width="90dp"
        android:layout_height="wrap_content"
        android:text="go2grid"
        android:id="@+id/grid2"
        android:textSize="10dp"
        android:layout_centerVertical="true"
        android:layout_toLeftOf="@+id/mi_instrument1"
        android:layout_toStartOf="@+id/mi_instrument1" />

</RelativeLayout>
