<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools" android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".MainActivity"
    android:orientation="vertical"
    android:id="@+id/mixing_interface">

    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="40dp"
        android:padding="@dimen/activity_title"
        android:background="#000000"
        >

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Mixing Interface"
            android:textColor="#ffffff"
            android:textSize="@dimen/mixinginterface_title"/>

        <ImageButton
            android:src="@drawable/btn_global_play"
            android:id="@+id/mi_play_all"
            android:background="#000000ff"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignParentTop="true"
            android:layout_centerHorizontal="true" />

        <ImageButton
            android:src="@drawable/btn_add_sounds"
            android:id="@+id/mi_add_sounds"
            android:background="#000000ff"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignParentTop="true"
            android:layout_toLeftOf="@+id/mi_export_midi"
            android:layout_toStartOf="@+id/mi_export_midi" />

        <ImageButton
            android:src="@drawable/btn_save"
            android:id="@+id/mi_export_midi"
            android:background="#000000ff"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Export Midi"
            android:layout_alignParentTop="true"
            android:layout_alignParentRight="true"
            android:layout_alignParentEnd="true" />

    </RelativeLayout>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:background="#ffff00"
        >

        <LinearLayout
            android:orientation="vertical"
            android:layout_width="0dp"
            android:layout_height="match_parent"
            android:background="@color/white"
            android:layout_weight=".6"
            android:padding="@dimen/activity_vertical_margin"
            >

            <RelativeLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:background="@color/white"
                android:id="@+id/mi_track1"
                >

                <ImageButton
                    android:id="@+id/mi_track_rec1"
                    android:src="@drawable/btn_record"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:background="#000000ff"
                    android:layout_centerVertical="true"
                    android:layout_alignTop="@+id/mi_track_play1"
                    android:layout_alignParentLeft="true"
                    android:layout_alignParentStart="true" />

                <ImageButton
                    android:id="@+id/mi_track_play1"
                    android:src="@drawable/btn_global_play"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:background="#000000ff"
                    android:layout_centerVertical="true"
                    android:layout_toRightOf="@+id/mi_track_rec1"
                    android:layout_toEndOf="@+id/mi_track_rec1" />

                <TextView
                    android:id="@+id/mi_track_title1"
                    android:text="Track1"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_centerVertical="true"
                    android:layout_toRightOf="@+id/mi_track_play1"
                    android:layout_toEndOf="@+id/mi_track_play1" />

                <Button
                    android:id="@+id/mi_track_edit1"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="Edit"
                    android:layout_centerVertical="true"
                    android:layout_alignParentRight="true"
                    android:layout_alignParentEnd="true" />


            </RelativeLayout>

            <RelativeLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:background="@color/white"
                android:id="@+id/mi_track2"
                >

                <ImageButton
                    android:id="@+id/mi_track_rec2"
                    android:src="@drawable/btn_record"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:background="#000000ff"
                    android:layout_centerVertical="true"
                    android:layout_alignTop="@+id/mi_track_play2"
                    android:layout_alignParentLeft="true"
                    android:layout_alignParentStart="true" />

                <ImageButton
                    android:id="@+id/mi_track_play2"
                    android:src="@drawable/btn_global_play"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:background="#000000ff"
                    android:layout_centerVertical="true"
                    android:layout_toRightOf="@+id/mi_track_rec2"
                    android:layout_toEndOf="@+id/mi_track_rec2" />

                <TextView
                    android:id="@+id/mi_track_title2"
                    android:text="Track2"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_centerVertical="true"
                    android:layout_toRightOf="@+id/mi_track_play2"
                    android:layout_toEndOf="@+id/mi_track_play2" />

                <Button
                    android:id="@+id/mi_track_edit2"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="Edit"
                    android:layout_centerVertical="true"
                    android:layout_alignParentRight="true"
                    android:layout_alignParentEnd="true" />


            </RelativeLayout>

        </LinearLayout>

        <LinearLayout
            android:orientation="vertical"
            android:layout_width="0dp"
            android:layout_height="match_parent"
            android:background="#cccccc"
            android:layout_weight=".40"
            android:padding="@dimen/activity_vertical_margin"
            >

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Start at bar:"/>

            <SeekBar
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:id="@+id/seekBar" />

            <CheckBox
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Enabled"
                android:id="@+id/checkBox" />

            <Button
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Copy"
                android:id="@+id/mi_track_copy" />

            <Button
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Delete"
                android:id="@+id/mi_track_delete" />


        </LinearLayout>

    </LinearLayout>

</LinearLayout>
